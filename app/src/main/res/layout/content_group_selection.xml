<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.it_club.timetable_kuam.SelectionActivity"
    tools:showIn="@layout/activity_group_selection">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#7E57C2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/select"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerGroup"
        app:layout_constraintStart_toStartOf="@+id/spinnerGroup"
        app:layout_constraintTop_toBottomOf="@+id/spinnerGroup" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinnerChair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:smsp_alwaysShowFloatingLabel="false"
        app:smsp_enableErrorLabel="true"
        app:smsp_enableFloatingLabel="false"
        app:smsp_errorText="@string/empty_error"
        app:smsp_errorTextSize="13sp"
        app:smsp_floatingLabelColor="#1976D2"
        app:smsp_floatingLabelText="Floating Label Text"
        app:smsp_hint="Кафедра"
        app:smsp_hintColor="#969696"
        app:smsp_hintSize="18sp"
        app:smsp_itemColor="#000000"
        app:smsp_itemListColor="#000000"
        app:smsp_itemListHintBackgroundColor="#808080"
        app:smsp_itemListHintColor="#FFFFFF"
        app:smsp_itemSize="16sp"
        app:smsp_multilineError="false"
        app:smsp_selectedItemListColor="#3F51B5" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinnerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerChair"
        app:layout_constraintStart_toStartOf="@+id/spinnerChair"
        app:layout_constraintTop_toBottomOf="@+id/spinnerChair"
        app:smsp_alwaysShowFloatingLabel="true"
        app:smsp_enableErrorLabel="true"
        app:smsp_enableFloatingLabel="true"
        app:smsp_errorText="@string/empty_error"
        app:smsp_errorTextSize="13sp"
        app:smsp_floatingLabelColor="#1976D2"
        app:smsp_floatingLabelText=" "
        app:smsp_hint="Группа"
        app:smsp_hintColor="#969696"
        app:smsp_hintSize="18sp"
        app:smsp_itemColor="#000000"
        app:smsp_itemListColor="#000000"
        app:smsp_itemListHintBackgroundColor="#808080"
        app:smsp_itemListHintColor="#FFFFFF"
        app:smsp_itemSize="16sp"
        app:smsp_multilineError="false"
        app:smsp_selectedItemListColor="#3F51B5" />

</androidx.constraintlayout.widget.ConstraintLayout>