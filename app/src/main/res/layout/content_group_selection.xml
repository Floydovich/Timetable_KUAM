<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GroupSelectionActivity"
    tools:showIn="@layout/activity_group_selection">

    <Spinner
        android:id="@+id/spinnerSpecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:dropDownWidth="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerGroups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSpecs"
        app:layout_constraintStart_toStartOf="@+id/spinnerSpecs"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSpecs" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/check_it"
        app:layout_constraintEnd_toEndOf="@+id/spinnerGroups"
        app:layout_constraintStart_toStartOf="@+id/spinnerGroups"
        app:layout_constraintTop_toBottomOf="@+id/spinnerGroups" />
</androidx.constraintlayout.widget.ConstraintLayout>